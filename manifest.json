{
  "name": "SSKinopoisk",
  "version": "1.0.3",
  "description": "Watch movies for free",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.kinopoisk.ru/film/*",
        "https://*.kinopoisk.ru/series/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://*.ggkinopoisk.ru/"
  ],
  "permissions": [
    "tabs"
  ]
}